{
  "exclude": ["node_modules", "dist", "lib"],
  "files": [],
  "compilerOptions": {
    "stripInternal": true,
    "skipLibCheck": true,
    "target": "es2019" /*Jest does not work with anything above this*/,
    "module": "esnext",
    "lib": [],
    "jsx": "react",
    "rootDir": ".",
    "outDir": "lib",
    "downlevelIteration": true,
    "strict": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@kira/*": ["modules/*/src"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "references": [
    { "path": "modules/helper-filesystem" },
    { "path": "modules/logger" },
    { "path": "modules/bundler" },
    { "path": "modules/std" },
    { "path": "modules/ui-std" },
    { "path": "modules/ui" },
    { "path": "modules/instantiation" },
    { "path": "modules/application-state" },
    { "path": "modules/linter" },
    { "path": "modules/id" },
  ]
}
